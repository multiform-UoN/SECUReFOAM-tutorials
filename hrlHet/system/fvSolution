solvers
{
    "p.*"
    {
        solver           GAMG;
        smoother         GaussSeidel;
        preconditioner   DIC;
        tolerance        1e-10;
        relTol           1e-3;
    }
    "c.*"
    {
        solver           PBiCGStab;
        preconditioner   DILU;
        smoother         DILU;
        tolerance        1e-10;
        relTol           1e-3;
    }

}

PIMPLE
{
    residualControl
    {
        p 1e-8;
        c 1e-8;
    }
    nNonOrthogonalCorrectors 3;
    nOuterCorrectors 100;

    outerCorrectorResidualControl
    {
        p
        {
            tolerance 1e-6;
            relTol 1e-3;
        }

        c
        {
            tolerance 1e-6;
            relTol 1e-2;
        }
    }
pRefPoint (0 0 50);
pRefValue 0;
}

relaxationFactors
{
    fields
    {
        p    1;
        c   .1;
    }

    equations
    {
       "p.*"  1;
       c  .99;
    }
