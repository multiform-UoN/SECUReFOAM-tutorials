FoamFile
{
  version     2.0;
  format      ascii;
  class       dictionary;
  location    "constant";
  object      transportProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

transportModel  Newtonian;

mu             mu   [1 -1 -1 0 0 0 0]  1.e-3;
rho            rho1 [1 -3 0 0 0 0 0]   1000.;
rhoc	       rho2 [1 -3 0 0 0 0 0]   1200.;
Dm             DT   [0 2 -1 0 0 0 0]   3.565e-7; // 3.565e-6 multiplied by porosity.
beta           beta [0 0 0 0 0 0 0]    0.1;
hydrostaticPressure on;
concentrationBased off;
dispersionModel off;
incompressible on;

densityModel
{
  type      linearDensity;
  rho0  1000.;
  beta  700.;
}

viscosityModel
{
  type constantViscosity;
  mu0  1e-3;
}
