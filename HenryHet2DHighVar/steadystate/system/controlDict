FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     rhoDarcyFoam;

startFrom       startTime;

startTime       0.0;

stopAt          endTime;

endTime         100;

deltaT          1.;

writeControl    adjustableRunTime;

writeInterval   1;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

adjustTimeStep  no;

runTimeModifiable yes;

maxDeltaT	60.;

//- for Picard time step control
timeStepControl Picard;
dTFactIncrease  1.0;
dTFactDecrease  1.0;

//- for h variation time step control
//timeStepControl dthetamax;
//dthetamax           0.01;

